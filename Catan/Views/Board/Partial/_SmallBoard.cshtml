
@functions {
    string NumberToString(int input)
    {

        switch (input)
        {
            case 2:
                return "number two";
            case 3:
                return "number three";
            case 4:
                return "number four";
            case 5:
                return "number five";
            case 6:
                return "number six";
            case 8:
                return "number eight";
            case 9:
                return "number nine";
            case 10:
                return "number ten";
            case 11:
                return "number eleven";
            case 12:
                return "number twelve";
            default:
                return "";
        }
    }
}

